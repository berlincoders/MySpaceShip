<% if @my_bookings.empty? %>
  <div class="p-3">
    <h1>You have no</h1>
    <h1>events booked</h1>
  </div>
<% else %>
  <div class="p-3">
    <h1>Your upcoming</h1>
    <h1>space events</h1>
  </div>
<% end %>


<div class="overflow-auto mx-5 py-1" style="max-height: 350px;">
  <div class="d-flex flex-column my-1">
    <% @my_bookings.each do |booking| %>
      <div class="border p-3 my-2" style="background-color: #D65A31; border-radius: 5px;">
        <h6 class="spaceship-name-toggle d-flex justify-content-between pt-2">
          <span><%= booking.spaceship.name %> <%= booking.spaceship.model %></span>
          <span>Booked: <%= booking.end_date.strftime('%b %d, %Y') %></span>
        </h6>
      </div>

      <div class="details-box" style="display: none;">
        <div class="bookings-page-content d-flex justify-content-between align-items-center p-3"
          style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
          url('<%= url_for(booking.spaceship.photo) %>');">
            <span>
              <h6>Your booking of</h6>
              <h6><%= "#{booking.spaceship.name} #{booking.spaceship.model}" %></h6>
            </span>
            <span style="color: #FAF0E6;">
              <p style="margin-bottom: 0px;">From: <span style="color: #FF6000;"><%= booking.start_date %> </span> </p>
              <p>to: <span style="color: #FF6000;"><%= booking.end_date %> </span> </p>
              <p style="margin-bottom: 0px;">Daily Rate: <span style="color: #FF6000;"><%= booking.spaceship.daily_rate %> </span> </p>
              <p>Total Invoice Amount: <span style="color: #FF6000;"><%= (((booking.end_date - booking.start_date).to_i + 1) * booking.spaceship.daily_rate).round(2) %> </span> </p>
            </span>
        </div>

      </div>
    <% end %>
  </div>
</div>

<div>

<h1>My Spaceships</h1>
<% @spaceships.each do | spaceship|  %>
<h3><%= spaceship.name %></h3>
<% end %>


<h1>My open booking requests</h1>
<p><% @my_spaceships_bookings.each do | spaceship_booking | %>
  <h3><%= spaceship_booking.spaceship.name%></h3>
  <%= spaceship_booking.start_date%>
  <%= spaceship_booking.end_date%></p>
  <%= link_to "Accept", booking_confirm_path(spaceship_booking) %>
  <%= link_to "Decline", booking_decline_path(spaceship_booking) %>
<% end %>
</div>

<script>
  $(document).ready(function() {
    $(".spaceship-name-toggle").click(function() {
      $(this).parent().next(".details-box").slideToggle();
    });
  });
</script>
