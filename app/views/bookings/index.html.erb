<h1 class="p-3">Your upcoming space events</h1>
<div class="d-flex flex-column justify-content-center align-items-center overflow-auto" style="max-height: 300px;">
  <div class="d-flex flex-column my-1">
    <% @bookings.each do |booking| %>
      <% spaceship = Spaceship.find(booking.spaceship_id) %>
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="mt-1 mx-3"><%= spaceship.name %></h3>
        <%= link_to "View details", booking_path(booking), class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
