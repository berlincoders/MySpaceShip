<div class="d-flex flex-column justify-content-center align-items-center overflow-auto p-3" style="max-height: 300px;">
  <h1>Your upcoming space events</h1>
  <div class="d-flex flex-column">
    <% @bookings.each do |booking| %>
      <% spaceship = Spaceship.find(booking.spaceship_id) %>
      <div class="d-flex justify-content-between align-items-center my-1">
        <h3 class="mx-3"><%= spaceship.name %></h3>
        <%= link_to "View details", booking_path(booking), class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
